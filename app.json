{
  "expo": {
    "name": "alertapp",
    "slug": "alertapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/splash-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bytescode.alertapp",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Esta app necesita acceso a tu ubicaci贸n para monitorear riesgos de accidentes en tiempo real.",
        "NSLocationWhenInUseUsageDescription": "Esta app necesita acceso a tu ubicaci贸n para monitorear riesgos de accidentes.",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.bytescode.alertapp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "FOREGROUND_SERVICE",
        "POST_NOTIFICATIONS",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Esta app necesita acceso a tu ubicaci贸n para monitorear zonas de riesgo de accidentes en tiempo real y alertarte cuando entres a una zona peligrosa.",
          "locationWhenInUsePermission": "Permitir acceso a la ubicaci贸n mientras usas la app para detectar zonas de riesgo.",
          "isAndroidBackgroundLocationEnabled": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "e213dd60-1fea-486b-a40d-96a57b92f55f"
      }
    }
  }
}
